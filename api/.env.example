# Application
APP_ENV=development
HTTP_PORT=8080

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/mirage
# OR for SQLite:
# SQLITE_PATH=./mirage.db

# Railway API (existing - will be migrated to Vault in future tasks)
RAILWAY_API_TOKEN=your-railway-token
RAILWAY_PROJECT_ID=your-project-id
RAILWAY_GRAPHQL_ENDPOINT=https://backboard.railway.app/graphql/v2

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Status Poller
POLL_INTERVAL_SECONDS=30
POLL_JITTER_FRACTION=0.2

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Vault Configuration (NEW)
VAULT_ENABLED=true
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_SKIP_VERIFY=true
VAULT_MOUNT_PATH=mirage

# GitHub Service Token (for discovery)
GITHUB_SERVICE_TOKEN=ghp_...